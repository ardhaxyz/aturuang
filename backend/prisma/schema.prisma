// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Organization model - Multi-tenant structure
model Organization {
  id          String   @id @default(cuid())
  name        String
  description String?
  logoUrl     String?  // Optional org logo path
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  users  User[]
  rooms  Room[]
  
  @@index([isActive])
}

// Room model with organization support
model Room {
  id             String    @id @default(cuid())
  name           String
  capacity       Int
  facilities     String    @default("") // JSON string for SQLite
  imageUrl       String?   // Room image path
  isPublic       Boolean   @default(false) // Public rooms accessible by all
  isActive       Boolean   @default(true)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  // Organization relation (nullable for public rooms)
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)

  // Relations
  bookings Booking[]

  @@index([organizationId])
  @@index([isPublic])
  @@index([isActive])
}

// Booking model - unchanged structure
model Booking {
  id          String    @id @default(cuid())
  roomId      String
  date        String    // Date in YYYY-MM-DD format
  startTime   String    // Time in HH:MM format
  endTime     String    // Time in HH:MM format
  title       String
  bookerName  String
  bookerEmail String?
  status      String    @default("pending") // pending, approved, rejected
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)

  // Index for query performance
  @@index([roomId])
  @@index([date])
  @@index([status])
}

// User model with role-based access and organization
model User {
  id             String   @id @default(cuid())
  username       String   @unique
  email          String?  @unique
  passwordHash   String
  role           String   // superadmin, org_admin, user
  isActive       Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Organization relation (nullable for superadmin)
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id], onDelete: SetNull)

  @@index([organizationId])
  @@index([role])
  @@index([isActive])
}
