# Database - PostgreSQL (Production/Render)
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@[HOST]:5432/aturuang

# JWT Secret (Production - must be 32+ chars)
JWT_SECRET=your-production-secret-key-min-32-chars-change-in-production

# Server
PORT=3001
NODE_ENV=production

# Frontend URL (for CORS)
FRONTEND_URL=https://aturuang.vercel.app

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=2097152
